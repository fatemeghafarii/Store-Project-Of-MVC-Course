@page
@model IndexModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>"C#"</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
</head>
<body>
    @foreach (var item in @Model.products)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/@item.ViewImagePath" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Description</p>
                <label>@item.Sizes</label>
                <a href="~/ProductDetail/@item.Id" class="btn btn-primary">More1</a>

               @* <a asp-action="ProductDetail" , asp-controller="Products" asp-route-id="@item.Id" class="btn btn-primary">More</a>*@
            </div>
        </div>
    }


</body>
</html>